{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "constants/*": ["./constants/*"],
      "core/*": ["./core/*"],
      "data/*": ["./data/*"],
      "datatypes/*": ["./datatypes/*"],
      "methods/*": ["./methods/*"],
      "properties/*": ["./properties/*"],
      "selectors/*": ["./selectors/*"]
    },
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "lib": [
      "es2015", "es2016", "es2017.object"
    ]
  }
}
